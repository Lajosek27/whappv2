{% extends 'base.html.twig' %}

{% block title %}Katalog postaci{% endblock %}

{% block body %}

<div class="container-lg">
    <div id="characterList">
        <div class="header"><h1>Lista postaci</h1></div>
        <div class="content">
        {# {{ dump(characters) }} #}
        {% for character in characters %}
            <div class="character d-flex">
                <div class="characterImg"><a href='#' class="d-flex"><img src="{{asset("img/base-character-portrait.png")}}"></a></div>
                <div class="characterInfo">
                    <div class="characterName"><a href='#'><p>{{ character.name }}</p></a></div>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="characterListNav">
            {% if page > 1 %}
            <a href="{{path('app_catalog', { 'page' : page-1 })}}"><button type="submit" class="btn btn-primary">Poprzednia</button></a>
            {% endif %}
            {% if page < maxPage %}
            <a href="{{path('app_catalog', { 'page' : page+1 })}}"><button type="submit" class="btn btn-primary">NastÄ™pna</button></a>
            {% endif %}
        </div>
    </div>

  
</div>
{% endblock %}
